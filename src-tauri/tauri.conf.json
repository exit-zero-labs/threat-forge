{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "ThreatForge",
	"version": "0.1.0",
	"identifier": "com.exitzerolabs.threatforge",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "ThreatForge",
				"width": 1280,
				"height": 800,
				"minWidth": 900,
				"minHeight": 600,
				"decorations": true,
				"resizable": true
			}
		],
		"security": {
			"csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost; font-src 'self' data:; connect-src 'self' https://api.anthropic.com https://api.openai.com ipc: http://ipc.localhost"
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
